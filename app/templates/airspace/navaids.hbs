<h2>Navaids</h2>
<ul>
  {{#each model as |navaid|}}
    <li>
      {{#link-to "airspace.navaids.detail" navaid}}
        {{navaid.code}} - {{navaid.name}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>

